<%= form_with model:[current_login, @posts, @posst.comments.build], class: 'frm_comment', scope: :comments, method: :post, local: true do |f| %>
  <%= f.text_area :text, placeholder: "Add Comment", rows: 5, required: true, class: 'txtarea_input' %>
  <div class="line_break"><%= f.submit "Add Comment", class:'bttn_comment' %></div>
<% end %>


 